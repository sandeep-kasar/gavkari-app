<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CreateEventThreeActivity">

    <include layout="@layout/layout_toolbar"></include>

    <ScrollView
        android:layout_marginTop="56dp"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:paddingRight="@dimen/dimens_16"
            android:paddingLeft="@dimen/dimens_16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:background="@drawable/border_square_gray"
                android:padding="@dimen/dimens_6"
                android:layout_marginTop="@dimen/dimens_16"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:drawablePadding="@dimen/dimens_12"
                    android:drawableLeft="@drawable/ic_information"
                    android:gravity="fill_vertical"
                    android:textSize="@dimen/text_18"
                    android:paddingLeft="@dimen/dimens_4"
                    android:text="@string/lbl_facilities_available"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:gravity="fill_vertical"
                    android:drawablePadding="@dimen/dimens_16"
                    android:drawableLeft="@drawable/ic_pointer_grey"
                    android:paddingRight="@dimen/dimens_6"
                    android:paddingLeft="@dimen/dimens_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_noti_3"
                    android:textColor="@color/dark_gray"
                    
                    android:textStyle="normal"></TextView>

                <TextView
                    android:layout_marginTop="@dimen/dimens_4"
                    android:id="@+id/tvInfo"
                    android:gravity="fill_vertical"
                    android:drawablePadding="@dimen/dimens_16"
                    android:drawableLeft="@drawable/ic_pointer_grey"
                    android:paddingRight="@dimen/dimens_6"
                    android:paddingLeft="@dimen/dimens_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_noti_4"
                    android:textColor="@color/dark_gray"
                    android:textStyle="normal"></TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layPublishNow"
                android:background="@drawable/border_select_plan"
                android:padding="@dimen/dimens_6"
                android:layout_marginTop="@dimen/dimens_16"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:textColor="@color/colorPrimary"
                    android:checked="true"
                    android:layout_marginTop="2dp"
                    android:id="@+id/rdPublishNow"
                    android:selectAllOnFocus="true"
                    android:textSize="@dimen/text_18"
                    android:paddingLeft="@dimen/dimens_12"
                    android:text="@string/lbl_publish_now"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layPublishLater"
                android:background="@drawable/border_square_gray"
                android:padding="@dimen/dimens_6"
                android:layout_marginTop="@dimen/dimens_16"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:textColor="@color/gray"
                    android:layout_marginTop="2dp"
                    android:id="@+id/rdPublishLater"
                    android:selectAllOnFocus="true"
                    android:textSize="@dimen/text_18"
                    android:paddingLeft="@dimen/dimens_12"
                    android:text="@string/lbl_publish_later"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />
            </LinearLayout>



        </LinearLayout>
        
    </ScrollView>

    <LinearLayout
        android:layout_marginBottom="60dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <CheckBox
            android:textSize="@dimen/text_15"
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_40"
            android:layout_centerInParent="true"
            android:text="@string/check_terms"
            />

        <TextView
            android:textSize="@dimen/text_15"
            android:gravity="center"
            android:paddingLeft="@dimen/dimens_8"
            android:id="@+id/tvTerms"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/warning_terms"
            android:clickable="true" />

    </LinearLayout>

    <Button
        android:layout_gravity="bottom"
        android:id="@+id/btnContinueThree"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:text="@string/lbl_save"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16" />

</FrameLayout>