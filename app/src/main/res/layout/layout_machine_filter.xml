<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.gavkariapp.activity.FilterMyVillageActivity">

    <LinearLayout
        android:minWidth="350dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingRight="@dimen/dimens_26"
            android:paddingLeft="@dimen/dimens_30"
            android:drawableRight="@drawable/ic_down_arrow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_40"
            android:background="@color/isabelline"
            android:gravity="fill_vertical"
            android:text="Price"
            android:textColor="@color/dark_jungle_green"
            android:textSize="@dimen/text_15"></TextView>

        <LinearLayout
            android:background="@color/white"
            android:id="@+id/layBelow15k"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textColor="@color/dark_jungle_green"
                android:textSize="@dimen/text_14"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dimens_30"
                android:gravity="fill_vertical"
                android:text="Below than 15000"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <LinearLayout
                android:padding="@dimen/dimens_16"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:padding="2dp"
                    android:id="@+id/imgBelow15K"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_done_tick" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:background="#e0e0e0"
            android:layout_width="match_parent"
            android:layout_height="0.7dp" />

        <LinearLayout
            android:background="@color/white"
            android:id="@+id/layP15to30k"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textColor="@color/dark_jungle_green"
                android:textSize="@dimen/text_14"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dimens_30"
                android:gravity="fill_vertical"
                android:text="\u20B9 15001  to  \u20B9 30000"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <LinearLayout
                android:padding="@dimen/dimens_16"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:padding="2dp"
                    android:id="@+id/imgP15to30k"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_done_tick" />
            </LinearLayout>                </LinearLayout>
        <TextView
            android:background="#e0e0e0"
            android:layout_width="match_parent"
            android:layout_height="0.7dp" />

        <LinearLayout
            android:background="@color/white"
            android:id="@+id/layP30to60k"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
