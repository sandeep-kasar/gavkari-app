                android:layout_height="match_parent">
                <ImageView
                    android:padding="2dp"
                    android:id="@+id/imgP1Lto15L"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_done_tick" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:background="#e0e0e0"
            android:layout_width="match_parent"
            android:layout_height="0.7dp" />

        <LinearLayout
            android:background="@color/white"
            android:id="@+id/layP15Lto2L"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textColor="@color/dark_jungle_green"
                android:textSize="@dimen/text_14"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dimens_30"
                android:gravity="fill_vertical"
                android:text="\u20B9 150001 to  \u20B9 200000"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <LinearLayout
                android:padding="@dimen/dimens_16"
                android:layout_weight="5"
