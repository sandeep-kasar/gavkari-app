<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HelpActivity">

    <LinearLayout
        android:padding="@dimen/dimens_40"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/vector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:textColor="@color/dark_jungle_green"
            android:textSize="@dimen/text_35"
            android:text="@string/need_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/extra_dark_gray"
            android:drawablePadding="@dimen/dimens_12"
            android:layout_marginTop="@dimen/dimens_24"
            android:textSize="@dimen/text_16"
            android:text="@string/reach_us_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:layout_marginTop="@dimen/dimens_16"
            android:textSize="@dimen/text_16"
            android:text="@string/msg_addres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/extra_dark_gray"
            android:drawablePadding="@dimen/dimens_12"
            android:drawableLeft="@drawable/ic_speech_bubble"
            android:layout_marginTop="@dimen/dimens_24"
            android:textSize="@dimen/text_16"
            android:text="@string/_contact_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/extra_dark_gray"
            android:drawablePadding="@dimen/dimens_12"
            android:drawableLeft="@drawable/ic_gmail"
            android:layout_marginTop="@dimen/dimens_8"
            android:textSize="@dimen/text_16"
            android:text="@string/email_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/vector"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_help_activity"
        tools:ignore="VectorDrawableCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>