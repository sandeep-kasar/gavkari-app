<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        layout="@layout/layout_toolbar"></include>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="@dimen/dimens_20"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimens_12"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:clickable="false"
                    android:id="@+id/imgAvatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/ic_user_profile"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimens_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_user"
                    android:textColor="@color/rich_electric_blue"
                    android:textSize="@dimen/text_13" />

                <EditText
                    android:id="@+id/edtNameEd"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="fill_vertical"
                    android:hint="@string/hint_user"
                    android:background="@drawable/border_bottom_grey"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_16" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimens_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_Email"
                    android:textColor="@color/rich_electric_blue"
                    android:textSize="@dimen/text_13" />

                <EditText
                    android:id="@+id/edtEmailEd"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="fill_vertical"
                    android:hint="@string/hint_Email"
                    android:background="@drawable/border_bottom_grey"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_16" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimens_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_bio"
                    android:textColor="@color/rich_electric_blue"
                    android:textSize="@dimen/text_13" />

                <EditText
                    android:id="@+id/edtBio"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="fill_vertical"
                    android:hint="@string/hint_bio"
                    android:background="@drawable/border_bottom_grey"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dimens_16"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_mobile"
                        android:textColor="@color/rich_electric_blue"
                        android:textSize="@dimen/text_13" />

                    <EditText
                        android:id="@+id/edtMobileEd"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="fill_vertical"
                        android:hint="@string/hint_mobile"
                        android:background="@drawable/border_bottom_grey"
                        android:singleLine="true"
                        android:inputType="number"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/text_16" />

                </LinearLayout>

                <Button
                    android:visibility="gone"
                    android:id="@+id/btnVerify"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/lbl_verify"
                    android:textColor="@color/white" />
                <Button
                    android:id="@+id/btnVerified"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@color/kelly_green"
                    android:text="@string/lbl_verified"
                    android:textColor="@color/white"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:layout_marginTop="@dimen/dimens_4"
                android:id="@+id/tvOtpWait"
                android:textColor="@color/colorPrimary"
                android:text="@string/otp_submission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layIsVerified"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dimens_16"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtotpEdt"
                        android:inputType="number"
                        style="@style/TextInputEditText"
                        android:hint="@string/hint_enter_otp" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/lbl_submit"
                    android:textColor="@color/white" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dimens_16"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_my_village"
                        android:textColor="@color/rich_electric_blue"
                        android:textSize="@dimen/text_13" />

                    <EditText
                        android:id="@+id/edtVillageName"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="fill_vertical"
                        android:hint="@string/lbl_my_village"
                        android:background="@drawable/border_bottom_grey"
                        android:singleLine="true"
                        android:inputType="number"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/text_16" />

                </LinearLayout>

                <Button
                    android:visibility="gone"
                    android:id="@+id/btnChange"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/lbl_changes"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layChangeVillage"
                android:layout_marginBottom="@dimen/dimens_20"
                android:layout_marginTop="@dimen/dimens_20"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spnStateEdt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:listitem="@layout/layout_spinner">

                </Spinner>

                <View
                    android:paddingTop="@dimen/dimens_4"
                    android:paddingBottom="@dimen/dimens_4"
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/manatee"
                    ></View>

                <Spinner
                    android:id="@+id/spnDistEdt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:listitem="@layout/layout_spinner">

                </Spinner>

                <View
                    android:paddingTop="@dimen/dimens_4"
                    android:paddingBottom="@dimen/dimens_4"
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/manatee"
                    ></View>

                <Spinner
                    android:id="@+id/spnTalukaEdt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:listitem="@layout/layout_spinner">

                </Spinner>

                <View
                    android:paddingTop="@dimen/dimens_4"
                    android:paddingBottom="@dimen/dimens_4"
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/manatee"
                    ></View>

                <Spinner
                    android:id="@+id/spnVillageEdt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:listitem="@layout/layout_spinner">

                </Spinner>

                <View
                    android:paddingTop="@dimen/dimens_4"
                    android:paddingBottom="@dimen/dimens_4"
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/manatee"
                    ></View>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="48.5dp"
        android:background="@color/colorPrimary"
        android:text="@string/lbl_save"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</RelativeLayout>