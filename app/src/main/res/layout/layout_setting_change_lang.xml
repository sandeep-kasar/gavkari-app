<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:id="@+id/tvAppLang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimens_20"
            android:text="@string/lbl_app_lang"
            android:textColor="@color/dark_jungle_green"
            android:textSize="@dimen/text_15" />

        <Button
            android:id="@+id/btnChangeLang"
            android:layout_marginRight="@dimen/dimens_16"
            android:background="@drawable/border_square_blue"
            android:gravity="center"
            android:text="@string/lbl_changes"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_40"
            android:layout_weight="3.7" />


    </LinearLayout>


</LinearLayout>