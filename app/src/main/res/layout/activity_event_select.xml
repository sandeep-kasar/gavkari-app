<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CreateEventOneActivity">

    <include layout="@layout/layout_toolbar"></include>

    <TextView
        android:background="@color/isabelline"
        android:gravity="center"
        android:text="@string/lbl_select_event_type_to_create"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_40" />

    <ScrollView
        android:visibility="gone"
        android:id="@+id/scrMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimens_8"
        android:padding="@dimen/dimens_4"
        android:scrollbars="none">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:padding="@dimen/dimens_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvWedding"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:padding="@dimen/dimens_12"
                android:text="@string/wedding_ceremony"
                android:background="@drawable/border_square_blue_thin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvEngagment"
                android:layout_marginTop="@dimen/text_16"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:padding="@dimen/dimens_12"
                android:text="@string/engagement"
                android:background="@drawable/border_square_blue_thin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvhouseWarm"
                android:layout_marginTop="@dimen/text_16"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:padding="@dimen/dimens_12"
                android:text="@string/house_warming"
                android:background="@drawable/border_square_blue_thin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvjagran"
                android:layout_marginTop="@dimen/text_16"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:padding="@dimen/dimens_12"
                android:text="@string/jagaran_gondhal"
                android:background="@drawable/border_square_blue_thin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvDashkriya"
                android:layout_marginTop="@dimen/text_16"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:padding="@dimen/dimens_12"
                android:text="@string/dashkriya_vidhi"
                android:background="@drawable/border_square_blue_thin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvVarshShradh"
                android:layout_marginTop="@dimen/text_16"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:padding="@dimen/dimens_12"
                android:text="@string/first_memorial"
                android:background="@drawable/border_square_blue_thin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvRetirement"
                android:layout_marginTop="@dimen/text_16"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:padding="@dimen/dimens_12"
                android:text="@string/retirement_ceremony"
                android:background="@drawable/border_square_blue_thin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvbirthday"
                android:layout_marginTop="@dimen/text_16"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:padding="@dimen/dimens_12"
                android:text="@string/birthday"
                android:background="@drawable/border_square_blue_thin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:textStyle="bold"
                android:id="@+id/tvSatyaNarayan"
                android:layout_marginTop="@dimen/text_16"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:padding="@dimen/dimens_12"
                android:text="@string/satyanarayan_pooja"
                android:background="@drawable/border_square_blue_thin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvMahaPrasad"
                android:layout_marginTop="@dimen/text_16"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:padding="@dimen/dimens_12"
                android:text="@string/maha_prasad"
                android:background="@drawable/border_square_blue_thin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvOtherEvent"
                android:layout_marginTop="@dimen/text_16"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:padding="@dimen/dimens_12"
                android:text="@string/other"
                android:background="@drawable/border_square_blue_thin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>